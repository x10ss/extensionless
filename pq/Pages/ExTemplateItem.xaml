<UserControl x:Class="pq.Pages.ExTemplateItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             xmlns:local="clr-namespace:pq.MyConverters"
             Loaded="UserControl_Loaded"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <local:NullToVis x:Key="NullToVis" />
        <local:InvBoolToVis x:Key="InvBoolToVis" />
    </UserControl.Resources>
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <Border  VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="{DynamicResource Accent}" CornerRadius="20"  BorderThickness="2">
                <Grid Margin="10" MinWidth="200" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>

                    </Grid.RowDefinitions>



                    <ContentPresenter Grid.Row="0" Content="{StaticResource appbar_folder_people}"></ContentPresenter>
                    <StackPanel Margin="0,-10,0,6"  HorizontalAlignment="Center" Grid.Row="1">
                        <TextBlock TextTrimming="CharacterEllipsis" Foreground="{DynamicResource Accent}" Text="..." x:Name="UsernameTxt" Style="{StaticResource Heading2}" ></TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                        <Button Margin="5" ToolTip="Restore a fresh copy">
                            <ContentPresenter HorizontalAlignment="Center" Content="{StaticResource appbar_disk_download}"></ContentPresenter>
                        </Button>
                        <Button ToolTip="Donate to author (external link such as paypal.me/lvrsmnvc | kofi.com/lovre)">
                            <ContentPresenter Content="{StaticResource appbar_currency_dollar}"></ContentPresenter>
                        </Button>
                        <StackPanel ToolTip="Not able to vote | not logged in">
                        <Button Visibility="{Binding DidVote,Converter={StaticResource NullToVis }}" IsEnabled="False" Margin="5">
                            <ContentPresenter Content="{StaticResource appbar_star_remove}"></ContentPresenter>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Visibility="{Binding DidVote,Converter={StaticResource InvBoolToVis }}">
                            <Button  Width="37" Height="51" Padding="5,5,0,5" Margin="5,5,0,5" ToolTip="VoteDown --">
                                <ContentPresenter Content="{StaticResource appbar_star_add}"></ContentPresenter>
                            </Button>
                            <Button Width="37" Height="51" Padding="0,5,5,5" Margin="0,5,5,5" ToolTip="VoteUp ++">
                                <ContentPresenter Content="{StaticResource appbar_star_minus}"></ContentPresenter>
                            </Button>
                        </StackPanel>
                        <Button Width="74" Height="51" Visibility="{Binding DidVote,Converter={StaticResource BooleanToVisibilityConverter }}" Margin="5" ToolTip="Remove Vote xx">
                            <ContentPresenter Content="{StaticResource appbar_star_delete}"></ContentPresenter>
                        </Button>
                    </StackPanel>
                    <StackPanel Margin="0,6,0,3"   Grid.Row="3" HorizontalAlignment="Center" Orientation="Horizontal" >
                        <ContentPresenter Content="{StaticResource appbar_tree_leaf}"></ContentPresenter>
                        <TextBlock Margin="4,0,0,0"  VerticalAlignment="Center" Foreground="{DynamicResource Accent}" x:Name="RatingTxt" Text="..."></TextBlock>
                    </StackPanel>
                    <StackPanel Margin="0,3,0,3"  Grid.Row="4" HorizontalAlignment="Center" Orientation="Horizontal">
                        <ContentPresenter Content="{StaticResource appbar_calendar}"></ContentPresenter>
                        <TextBlock Margin="4,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource ItemTextDisabled}" Text="11.11.2011. 14:35"></TextBlock>
                    </StackPanel>
                    <StackPanel Margin="0,3,0,3"  Grid.Row="5" HorizontalAlignment="Center" Orientation="Horizontal">
                        <ContentPresenter Content="{StaticResource appbar_disk}"></ContentPresenter>
                        <TextBlock Margin="4,0,0,0"  VerticalAlignment="Center" Foreground="{DynamicResource ItemTextDisabled}" Text="12000000 Bytes"></TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
