<UserControl x:Class="pq.Pages.ExtendedLib"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             xmlns:local="clr-namespace:pq.MyConverters"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <local:Brush x:Key="Brush"></local:Brush>
        <local:Brush2 x:Key="Brush2"></local:Brush2>

    </UserControl.Resources>
    <Grid Style="{StaticResource ContentRoot}">

        <Grid ScrollViewer.VerticalScrollBarVisibility="Visible" MinWidth="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>

            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <ContentPresenter Content="{StaticResource appbar_switch_off}" x:Name="off"></ContentPresenter>
                <ContentPresenter Content="{StaticResource appbar_switch_on}" x:Name="on"></ContentPresenter>
                <CheckBox Foreground="{Binding ElementName=IsExtended,Path=IsChecked,Converter={StaticResource Brush}}" Margin="0,0,8,0" Checked="IsExtended_Checked" Unchecked="IsExtended_Unchecked" x:Name="IsExtended" ToolTip="Don't see the extension you need? Extend the library...">
                    <CheckBox.Content>
                        <TextBlock Text="AUXILARY LIBRARY" VerticalAlignment="Center" Style="{StaticResource Heading2}"></TextBlock>
                    </CheckBox.Content>
                </CheckBox>
                <ContentPresenter Content="{StaticResource appbar_transit_connection}" ></ContentPresenter>
            </StackPanel>
            <ListBox Background="{DynamicResource gd}" Grid.Row="1" ScrollViewer.CanContentScroll="False" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled"  x:Name="LexLB" Margin="15" SizeChanged="ListBox_SizeChanged" SelectedItem="{Binding MySel,Mode=TwoWay}"  SelectionChanged="ListBox_SelectionChanged" ItemsSource="{Binding LEX}" >
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding Cols}" HorizontalAlignment="Center"/>

                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid MouseLeave="Grid_MouseLeave" Width="55" ToolTip="{Binding FullName}">
                            <CheckBox Foreground="{Binding IsExtended,Converter={StaticResource Brush2}}" IsEnabled="False"  Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" IsChecked="{Binding IsExtended,Mode=TwoWay}" Content="{Binding Name}">

                            </CheckBox>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Grid.Row="2" HorizontalAlignment="Left">
                <mui:ModernButton IconData="F1 M 24.0033,56.0078L 24.0033,38.0053L 21.753,39.7556L 18.5026,34.8799L 38.0053,20.2528L 46.0064,26.2536L 46.0064,21.7531L 50.007,21.0029L 50.007,29.0041L 57.508,34.8799L 54.2576,39.7556L 52.0072,38.0053L 52.0072,56.0078L 24.0033,56.0078 Z M 38.0013,48.8868C 36.8634,48.8868 35.941,49.8092 35.941,50.9471C 35.941,52.085 36.8634,53.0074 38.0013,53.0074C 39.1392,53.0074 40.0616,52.085 40.0616,50.9471C 40.0616,49.8092 39.1392,48.8868 38.0013,48.8868 Z M 38.4134,32.4045C 34.7722,32.4045 31.8204,35.1718 31.8204,38.5854L 31.8204,39.4095L 35.941,39.4095L 35.941,38.1733C 35.941,36.8079 37.0479,35.701 38.4134,35.701C 39.7788,35.701 40.8857,36.8079 40.8857,38.1733C 40.8857,38.7688 40.8857,38.9975 39.2375,40.6457C 38.4134,41.4698 35.941,43.1998 35.941,46.0024L 35.941,47.2386L 40.0616,47.2386L 40.0616,45.5904C 40.0616,44.2249 40.8857,43.118 42.5339,42.2939C 44.1822,41.4698 45.0063,39.4095 45.0063,38.1733C 45.0063,34.7597 42.0545,32.4045 38.4134,32.4045 Z " Content="HOW DO I USE THE EXTENSIONLESS AUXILIARY LIBRARY?"  Click="ModernButton_Click_1"/>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
