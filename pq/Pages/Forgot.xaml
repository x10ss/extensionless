<UserControl x:Class="pq.Pages.Forgot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical" Style="{StaticResource ContentRoot}" >
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <TextBlock Style="{StaticResource Heading1}" VerticalAlignment="Center" Text="E-Mail"></TextBlock>
            <ContentPresenter Content="{StaticResource appbar_elevator_up}"></ContentPresenter>
            <TextBlock Style="{StaticResource Heading1}" VerticalAlignment="Center" Text="Reminder"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Vertical">

            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label HorizontalAlignment="Right" Grid.Column="0" Content="E-mail: ">
                </Label>
                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <TextBox MaxLength="30" x:Name="email"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <CheckBox Grid.Column="1" Content="Forgot my ID"></CheckBox>

                <CheckBox Grid.Column="2" Content="Forgot my Username"></CheckBox>
            </Grid>
            <mui:ModernButton Click="ModernButton_Click" EllipseDiameter="30" IconWidth="20" IconHeight="20" HorizontalAlignment="Right" Margin="15" IconData="F1 M 21.5,23L 54.5,23C 56.2489,23 58,24.7511 58,26.5L 58,49.5C 58,51.2489 56.2489,53 54.5,53L 21.5,53C 19.7511,53 18,51.2489 18,49.5L 18,26.5C 18,24.7511 19.7511,23 21.5,23 Z M 22,47C 22,48.3117 22.6883,49 24,49L 52,49C 53.3117,49 54,48.3117 54,47L 54,29L 40.6563,42.6567C 39.4197,43.8933 37.4146,43.8933 36.178,42.6567L 22,29L 22,47 Z M 25,27L 36.7378,38.7381C 37.6653,39.6656 39.169,39.6656 40.0965,38.7381L 52,27L 25,27 Z " Content="send the info to my email"></mui:ModernButton>
        </StackPanel>

    </StackPanel>
</UserControl>
