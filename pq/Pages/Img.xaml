<UserControl x:Class="pq.Pages.Img"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="11*"></RowDefinition>
                </Grid.RowDefinitions>
                <Button Grid.Column="0" Click="Button_Click" HorizontalAlignment="Left" Margin="10,10,10,10" Cursor="Hand">
                    <ContentPresenter Content="{StaticResource appbar_chess_pawn}"></ContentPresenter>
                </Button>
                <Button Grid.Column="5" Click="Button_Click_1" Content="Save" HorizontalAlignment="Left" Margin="10,10,10,10" Cursor="Hand" />
                <Button Grid.Column="7" Click="Button_Click_6" Content="Save" HorizontalAlignment="Left" Margin="10,10,10,10" Cursor="Hand" />
                <Button Grid.Column="6" Click="Button_Click_7"  Content="Save" HorizontalAlignment="Left" Margin="10,10,10,10" Cursor="Hand" />
                <Button Grid.Column="4" Click="Button_Click_2" Content="Shelve" HorizontalAlignment="Left" Margin="10,10,10,10" Cursor="Hand" />
                <Button Grid.Column="3" Click="Button_Click_3" Content="New" HorizontalAlignment="Left" Margin="10,10,10,10" Cursor="Hand" />
                <Button Grid.Column="2" Click="Button_Click_4" Content="◄" HorizontalAlignment="Center" Margin="10,10,10,10" Cursor="Hand" />
                <Button Grid.Column="1" Click="Button_Click_5" Content="►" HorizontalAlignment="Right" Margin="10,10,10,10" Cursor="Hand" />
                <InkCanvas x:Name="MyInk" Grid.Column="0" Grid.Row="1"   Grid.ColumnSpan="24" Grid.RowSpan="22"  Margin="10,10,10,10" EditingMode="None" Background="Transparent" PreviewMouseMove="inkcanvas_MouseMove" PreviewMouseUp="inkcanvas_MouseUp" PreviewMouseDown="inkcanvas_MouseDown"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
