             mc:Ignorable="d">

    <UserControl.Resources>
        <c:ConverterSample x:Key="ConverterSample"></c:ConverterSample>
        <c:InvBool x:Key="InvBool"></c:InvBool>
        <c:InvTmpl2Bool x:Key="InvTmpl2Bool"></c:InvTmpl2Bool>
        <c:Tmpl2Bool x:Key="Tmpl2Bool"></c:Tmpl2Bool>
        <c:ConverterSample2 x:Key="ConverterSample2"></c:ConverterSample2>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <c:RealTmpl2Bool x:Key="RealTmpl2Bool" />
        <c:Percival x:Key="Percival" />
        <c:InvBoolToVis x:Key="InvBoolToVis" />
        <c:RealConverterSample x:Key="RealConverterSample" />
    </UserControl.Resources>
  
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel>
                <Grid>
                    <ProgressBar Height="22" x:Name="Slajda"></ProgressBar>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <TextBlock Foreground="AliceBlue" Text="{Binding ElementName=Slajda,Path=Value, Converter={StaticResource Percival}}" />
                        <TextBlock Foreground="AliceBlue" Text=" %" />

                    </StackPanel>
                </Grid>

                <TextBlock TextTrimming="CharacterEllipsis">
                        <Run x:Name="Slajda5a" Text="▲▼"></Run>
                        <Run Text=" | " ></Run>
                        <Run Text="{Binding ElementName=Slajda,Path=Value}" ></Run>
                        <Run x:Name="Slajda5"></Run>
                </TextBlock>


                <Grid>

                    <TextBlock TextAlignment="Justify" Foreground="CadetBlue" Grid.Column="0" x:Name="Desc" Margin="5" TextWrapping = "Wrap" FontSize="9"/>

                </Grid>
                <StackPanel Orientation="Vertical" Margin="0,15,0,0" >
                    <Grid>
                        <ProgressBar Foreground="Green" ToolTip="Templated - Enabled" Maximum="125" Height="22" x:Name="Slajda4">

                        </ProgressBar>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                            <TextBlock Foreground="LightGreen" Text="{Binding ElementName=Slajda4,Path=Value, Converter={StaticResource Percival}}" />
                            <TextBlock Foreground="LightGreen" Text=" %" />
                        </StackPanel>
                    </Grid>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="♥ | " />
                        <TextBlock Text="{Binding ElementName=Slajda4,Path=Value}" />
                        <TextBlock Text=" File templates • ON"/>
                    </StackPanel>
                    <Grid>
                        <ProgressBar ToolTip="Blank - Enabled" Foreground="DarkOrange" Maximum="125" Height="22" x:Name="Slajda3">

                        </ProgressBar>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                            <TextBlock Foreground="LightYellow" Text="{Binding ElementName=Slajda3,Path=Value, Converter={StaticResource Percival}}"/>
                            <TextBlock Foreground="LightYellow" Text=" %" />
                        </StackPanel>
                    </Grid>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="◼ | " />
                        <TextBlock Text="{Binding ElementName=Slajda3,Path=Value}"/>
                        <TextBlock Text=" Blank templates • ON" />
                    </StackPanel>
                    <Grid>

                        <ProgressBar Foreground="Indigo" ToolTip="Not Enabled" Maximum="125" Height="22" x:Name="Slajda2">

                        </ProgressBar>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                            <TextBlock Foreground="Pink" Text="{Binding ElementName=Slajda2,Path=Value, Converter={StaticResource Percival}}" />
                            <TextBlock Foreground="Pink" Text=" %" />

                        </StackPanel>
                    </Grid>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="◻ | " />
                        <TextBlock Text="{Binding ElementName=Slajda2,Path=Value}" />
                        <TextBlock Text=" Not enabled • OFF" />

                    </StackPanel>


