<UserControl x:Class="pq.Pages.TemplatePack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Style="{StaticResource ContentRoot}">
        <Border  VerticalAlignment="Center" Background="{DynamicResource gdb}" BorderBrush="{DynamicResource Accent}" CornerRadius="20"  BorderThickness="2">
            <Grid Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>

                </Grid.RowDefinitions>


                <ContentPresenter Grid.Row="0" Content="{StaticResource extensionless}"></ContentPresenter>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="0" Margin="0,55,0,0">
                    <TextBlock Text="eX↓PACK²" VerticalAlignment="Bottom" FontWeight="Black" Style="{StaticResource Heading1}"></TextBlock>

                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Vertical"  Grid.Row="1">


                    <TextBlock  HorizontalAlignment="Center" Text="BOILERPLATE GALLERY" Foreground="{DynamicResource Accent}" Style="{StaticResource Heading2}"></TextBlock>

                </StackPanel>
                <StackPanel Margin="0,6,0,3"   Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal" >
                    <TextBlock Margin="4,0,0,0"  VerticalAlignment="Center" Foreground="{DynamicResource Accent}" x:Name="TemplateCountText" Text="8 "></TextBlock>
                    <ContentPresenter Content="{StaticResource appbar_layer_thick}"></ContentPresenter>
                </StackPanel>
                <StackPanel Margin="10" HorizontalAlignment="Center" Grid.Row="3">
                    <mui:ModernButton IconData="F1 M 34.8333,60.1667L 34.8333,57.3958L 41.1667,58.5833L 41.1667,60.1667L 34.8333,60.1667 Z M 31.6666,55.0209L 31.6666,52.25L 44.3333,53.8334L 44.3333,56.6042L 31.6666,55.0209 Z M 44.3333,51.8542L 31.6666,50.2709L 31.6666,47.5L 44.3333,49.0834L 44.3333,51.8542 Z M 38,17.4167C 44.9956,17.4167 50.6667,23.4422 50.6667,30.875C 50.6667,35.8565 44.3333,40.7324 44.3333,42.5329L 44.3333,47.5L 31.6667,45.9167L 31.6667,42.5329C 31.6667,41.1667 25.3333,35.8565 25.3333,30.875C 25.3333,23.4422 31.0044,17.4167 38,17.4167 Z " EllipseDiameter="40" IconWidth="25" IconHeight="25"></mui:ModernButton>
                </StackPanel>
            </Grid>
        </Border>
        <TextBlock TextWrapping="Wrap" TextAlignment="Justify" Text="- This enables you to customize your Extension List which gets loaded from the registry and displayed in the main menu. If your setting Auxiliary LIBRARY is set to ON then these here settings will make no efect, since the unchecked entries will be categorized as STANDARD LIBRARY and will be loaded as well. Only scenario in which you could use this option is when you don't have the Auxiliary LIB. option ON and want a more light-weight Library TO BE loaded." />

    </StackPanel>
</UserControl>
