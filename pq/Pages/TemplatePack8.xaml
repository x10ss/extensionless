                        <TextBlock Foreground="{DynamicResource ItemTextDisabled}" Text="PACK² " VerticalAlignment="Center"></TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
