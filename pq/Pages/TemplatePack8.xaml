<UserControl x:Class="pq.Pages.TemplatePack8"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <Border  VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="{DynamicResource ItemTextDisabled}" CornerRadius="5"  BorderThickness="2">
                <Grid Margin="10"  VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>

                    </Grid.RowDefinitions>


                    <ContentPresenter Grid.Row="0" Content="{StaticResource appbar_map_folds}"></ContentPresenter>
                    <StackPanel  Margin="0,0,0,0" Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0">
                        <TextBlock Foreground="{DynamicResource ItemTextDisabled}" FontWeight="Light" FontFamily="Cambria" VerticalAlignment="Bottom" Text="scrap tome" Style="{StaticResource Heading1}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Vertical"  Grid.Row="1">
                        <StackPanel HorizontalAlignment="Center"  Orientation="Horizontal"  Grid.Row="1">

                            <TextBlock FontStyle="Italic" Text="DOC∟DOCX∟PPTX"></TextBlock>
                        </StackPanel>
                        <StackPanel  HorizontalAlignment="Center" Orientation="Horizontal"  Grid.Row="2">
                            <TextBlock FontStyle="Oblique" Text="RTF∟PDF∟CSV"></TextBlock>

                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                        <Button Margin="0,8,1,0" ToolTip="Restore a fresh copy">
                            <ContentPresenter HorizontalAlignment="Center" Content="{StaticResource appbar_reset}"></ContentPresenter>
                        </Button>
                        <Button Margin="1,8,0,0" ToolTip="Open folder">
                            <ContentPresenter Content="{StaticResource appbar_book_open}"></ContentPresenter>
                        </Button>
                    </StackPanel>
                    <StackPanel Margin="0,8,0,0"  HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="3">
                        <Canvas Width="20" Height="20" Clip="F1 M 0,0L 70,0L 76,76L 0,70L 0,0">
