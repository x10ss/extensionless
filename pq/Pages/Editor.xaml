<UserControl x:Class="pq.Pages.Editor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="11*"></RowDefinition>
                </Grid.RowDefinitions>
                <Button Grid.Column="0" Content="Load" HorizontalAlignment="Left" Margin="10,10,10,10" Cursor="Hand" />
                <Button Grid.Column="5" Content="Save" HorizontalAlignment="Left" Margin="10,10,10,10" Cursor="Hand" />
                <Button Grid.Column="4" Content="Shelve" HorizontalAlignment="Left" Margin="10,10,10,10" Cursor="Hand" />
                <Button Grid.Column="3" Content="New" HorizontalAlignment="Left" Margin="10,10,10,10" Cursor="Hand" />
                <Button Grid.Column="2" Content="◄" HorizontalAlignment="Center" Margin="10,10,10,10" Cursor="Hand" />
                <Button Grid.Column="1" Content="►" HorizontalAlignment="Right" Margin="10,10,10,10" Cursor="Hand" />
                <TextBox Grid.Column="0" Grid.Row="1" AllowDrop="True"  Grid.ColumnSpan="24" Grid.RowSpan="22"  Margin="10,10,10,10" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" />
            </Grid>
            
        </ScrollViewer>
    </Grid>
</UserControl>
