<UserControl x:Name="myPro" x:Class="pq.Pages.Profile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             xmlns:local="clr-namespace:pq.MyConverters"
             xmlns:country="clr-namespace:CountryFlag;assembly=CountryFlag"
             >
    <UserControl.Resources>
        <local:Synch x:Key="Synch"></local:Synch>
        <local:Synch2 x:Key="Synch2"></local:Synch2>
        <local:InvBoolToVis x:Key="InvBoolToVis"></local:InvBoolToVis>
        <local:DegreeToPoint x:Key="DegreeToPoint"></local:DegreeToPoint>
        <local:InvDoubleOneZero x:Key="InvDoubleOneZero"></local:InvDoubleOneZero>
        <local:MyBoolToVis x:Key="MyBoolToVis"></local:MyBoolToVis>

        <local:Brush x:Key="Brush"></local:Brush>

    </UserControl.Resources>
    <DockPanel Style="{StaticResource ContentRoot}">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Margin="15" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Background="{DynamicResource  gd}" Margin="8,8,8,3" BorderBrush="{DynamicResource Accent}" BorderThickness="2">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <ContentPresenter Content="{StaticResource appbar_os_windows_8}"></ContentPresenter>
                            <StackPanel Margin="10" Orientation="Horizontal">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Margin="5" Foreground="{DynamicResource InputTextDisabled}"   HorizontalAlignment="Right" Text="Machine: " />
                                    <TextBlock Margin="5" Foreground="{DynamicResource InputTextDisabled}"   HorizontalAlignment="Right" Text="Username: " />

                                </StackPanel>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Margin="5" Foreground="{DynamicResource InputText}" x:Name="mydom" Text="domain" VerticalAlignment="Center"/>
                                    <TextBlock Margin="5" Foreground="{DynamicResource InputText}" x:Name="user" Text="username" VerticalAlignment="Center"/>

                                </StackPanel>

                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                </Border >
                <Border CornerRadius="8" Background="{DynamicResource Accent}"  BorderThickness="1" BorderBrush="{DynamicResource ItemText}">
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

                        <TextBlock Margin="15,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="WINDOWS ↑" Style="{StaticResource Heading2}"/>
                        <ContentPresenter HorizontalAlignment="Left" Content="{StaticResource appbar_people}"></ContentPresenter>
                        <TextBlock Margin="0,0,15,0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="↓ EXTENSIONLESS" Style="{StaticResource Heading2}"></TextBlock>

                    </StackPanel>
                </Border>
                <Border Background="{DynamicResource gdb}" Margin="8,2,8,8" BorderBrush="{Binding IsSynched, Converter={StaticResource Brush}}" BorderThickness="2" CornerRadius="2,2,22,22">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel MouseDown="StackPanel_MouseDown" Orientation="Horizontal" Margin="0,0,-30,0" Visibility="{Binding IsSynched,Converter={StaticResource BooleanToVisibilityConverter}}" VerticalAlignment="Top" >
                              

                            </StackPanel>
                            <ContentPresenter VerticalAlignment="Center" Margin="10" Content="{StaticResource extensionless_dim}"></ContentPresenter>

                            <StackPanel Margin="10" Orientation="Horizontal">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Margin="5" Foreground="{DynamicResource InputTextDisabled}" HorizontalAlignment="Right" Text="Username: "  />
                                    <TextBlock Margin="5" Foreground="{DynamicResource InputTextDisabled}" HorizontalAlignment="Right" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown_1" Text="Password: "/>
                                    <TextBlock  Margin="5" Foreground="{DynamicResource InputTextDisabled}"   HorizontalAlignment="Right" Text="Donation URL: " />
                                    <TextBlock Margin="5" Foreground="{DynamicResource InputTextDisabled}"   HorizontalAlignment="Right" Text="Country: " />
                                </StackPanel>
                                <StackPanel Orientation="Vertical">

                                    <TextBlock Margin="5" Foreground="{DynamicResource InputText}" x:Name="exuser" Text="• • •" VerticalAlignment="Center"/>
                                    <StackPanel Margin="5" Orientation="Horizontal">
                                        <PasswordBox MaxWidth="150" Password="•••" IsEnabled="False" FontSize="10" Foreground="{DynamicResource Accent}" x:Name="password" VerticalAlignment="Center" />
                                        <Button ToolTip="Copy ID to ClipBoard" Padding="1" Click="Button_Click_1" >
                                            <ContentPresenter Content="{StaticResource appbar_page_copy}"></ContentPresenter>
                                        </Button>
                                    </StackPanel>
                                    <TextBlock Margin="5" Foreground="{DynamicResource InputText}" Text="• • •" x:Name="donate" VerticalAlignment="Center"></TextBlock>
                                    <country:CountryFlag Margin="5" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="25" x:Name="flag"></country:CountryFlag>
                                  
                                  
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center" Margin="11">
                            <mui:ModernButton Click="ModernButton_Click" Content="Connect to Extensionless.com" IconData="M6715 657c-2183,-322 -4356,724 -5464,2639l-204 350 1987 1147 205 -341 2 -3c352,-609 892,-1072 1534,-1328l0 2215 -4003 2312 125 320c447,1145 1264,2094 2328,2709 822,474 1747,724 2696,724l6 0 398 -3 0 -2300 -403 2c-545,0 -1075,-143 -1547,-415 -129,-75 -252,-158 -368,-249l1918 -1108 4007 2313 215 -272c168,-212 320,-435 455,-669 967,-1675 963,-3729 0,-5400l-199 -347 -1992 1150 199 347c348,604 482,1310 384,1994l-1912 -1104 -21 -3904 -2 -731 -344 -48z"></mui:ModernButton>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel Margin="15" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border BorderBrush="{DynamicResource Accent}" BorderThickness="2">
                    <Grid Style="{StaticResource ContentRoot}">
                        <ScrollViewer>
                            <Border Padding="22" VerticalAlignment="Center" BorderThickness="{Binding ElementName=Thick,Path=Value}" HorizontalAlignment="Center" BorderBrush="{Binding BorderColor2}" CornerRadius="{Binding ElementName=Radius,Path=Value}" >
                                <Border.Background>


                                    <LinearGradientBrush StartPoint="0,0"  EndPoint="{ Binding ElementName=Grad3,Path=Value,Converter={StaticResource DegreeToPoint}}"  Opacity="{Binding ElementName=Opaque,Path=Value}">


                                        <GradientStop  Offset="0" Color="{Binding PackColor.Color}"/>
                                        <GradientStop Offset="{Binding ElementName=Grad,Path=Value}" Color="{Binding BorderColor.Color}"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <Grid MinWidth="200" VerticalAlignment="Center" HorizontalAlignment="Center">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"></RowDefinition>
                                        <RowDefinition Height="1*"></RowDefinition>
                                        <RowDefinition Height="1*"></RowDefinition>
                                        <RowDefinition Height="1*"></RowDefinition>
                                        <RowDefinition Height="1*"></RowDefinition>
                                        <RowDefinition Height="1*"></RowDefinition>
                                        <RowDefinition Height="1*"></RowDefinition>

                                    </Grid.RowDefinitions>
                                    <StackPanel  Grid.Row="0" Margin="10"/>

                                    <StackPanel  HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Orientation="Horizontal" Grid.Row="1">

                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,10,5,0" ToolTip="PACK COLOR PICKER"/>




                                    </StackPanel>
                                    <StackPanel  HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Orientation="Horizontal" Grid.Row="2">
                                        <StackPanel HorizontalAlignment="Center" Margin="2"/>
                                        <StackPanel HorizontalAlignment="Center" Margin="2"/>
                                        <StackPanel HorizontalAlignment="Center" Margin="2"/>

                                        <StackPanel HorizontalAlignment="Center" Margin="2"/>

                                        <StackPanel HorizontalAlignment="Center" Margin="2"/>

                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,15" Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">


                                        <TextBlock>
                            <Run MouseDown="TextBlock_MouseLeftButtonDown" Foreground="{Binding BorderColor2}" FontWeight="Bold" Text="{Binding Username}"></Run>
                            <Run FontStyle="Italic" Text="template pack"></Run>
                                        </TextBlock>


                                    </StackPanel>

                                    <StackPanel Margin="0,-8,0,8" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">

                                        <ContentPresenter ToolTip="LAST SHARE TIME"  HorizontalAlignment="Center" VerticalAlignment="Center" Content="{StaticResource appbar_share_sm}">
                                        </ContentPresenter>
                                        <TextBlock ToolTip="LAST SHARE TIME" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Run></Run>
                                    <Run Text="11.11.2011. 15:34"/>


                                        </TextBlock>

                                    </StackPanel>

                                    <StackPanel Grid.Row="5" HorizontalAlignment="Center" Orientation="Horizontal" >
                                        <StackPanel Orientation="Vertical">
                                            <Button ToolTip="Share pack with the community Limit is 5 ↑ MB" Visibility="{Binding IsSynched,Converter={StaticResource BooleanToVisibilityConverter} }" IsEnabled="{Binding ElementName=DirSize,Path=Value,Converter={StaticResource Synch}}" x:Name="Synch" Click="Button2_Click" HorizontalAlignment="Center">

                                                <Canvas Width="36" Height="36" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                                                    <Path Width="33" Height="33" Canvas.Left="0" Canvas.Top="2" Stretch="Fill" Fill="{DynamicResource ItemText}" Data="F1 M 19,31.6667C 22.4978,31.6667 25.3333,34.5022 25.3333,38C 25.3333,40.0017 24.4047,41.7865 22.9548,42.9471C 24.9536,49.0304 30.5383,53.4894 37.2083,53.8333C 37.2083,56.2887 38.2245,58.5067 39.8593,60.0898L 38,60.1667C 27.79,60.1667 19.1923,53.2639 16.619,43.8706C 14.3012,42.9295 12.6667,40.6557 12.6667,38C 12.6667,34.5022 15.5022,31.6667 19,31.6667 Z M 45.125,15.8333C 48.6228,15.8333 51.4583,18.6689 51.4583,22.1667C 51.4583,25.6645 48.6228,28.5 45.125,28.5C 41.6337,28.5 38.8022,25.675 38.7917,22.1861C 38.5294,22.1732 38.2655,22.1667 38,22.1667C 31.8493,22.1667 26.5178,25.6738 23.896,30.7973C 22.5009,29.8471 20.8153,29.2917 19,29.2917L 17.559,29.4103C 20.9149,21.4339 28.8034,15.8333 38,15.8333C 39.6024,15.8333 41.165,16.0034 42.6709,16.3263C 43.4256,16.0088 44.2548,15.8333 45.125,15.8333 Z M 45.9167,47.5C 47.3141,47.5 48.6058,47.9526 49.6532,48.7191C 52.2485,45.8991 53.8333,42.1347 53.8333,38C 53.8333,34.5408 52.724,31.3407 50.8417,28.736C 52.6012,27.2036 53.7393,24.9758 53.8278,22.4809C 57.7488,26.4794 60.1667,31.9574 60.1667,38C 60.1667,44.8738 57.0379,51.0169 52.1268,55.0828C 51.5466,57.9822 48.9868,60.1667 45.9167,60.1667C 42.4189,60.1667 39.5833,57.3311 39.5833,53.8333C 39.5833,50.3355 42.4189,47.5 45.9167,47.5 Z "/>
                                                </Canvas>
                                            </Button>
                                            <Border>
                                                <StackPanel Visibility="{Binding IsSynched,Converter={StaticResource InvBoolToVis} }" ToolTip="YOU FIRST NEED TO CONNECT TO EXTENSIONLESS.COM ON YOUR PROFILE PAGE TO SHARE YOUR PACK WITH THE COMMUNITY" Margin="4">
                                                    <TextBlock Foreground="{DynamicResource ItemTextDisabled}"  Width="60">
                                        CONNECT
                                                    </TextBlock>
                                                    <ContentPresenter Content="{StaticResource extensionless_small_disabled}"></ContentPresenter>
                                                </StackPanel>
                                            </Border>
                                            <!--<TextBlock FontSize="10" Width="70"  TextAlignment="Justify" TextWrapping="Wrap" Margin="0,2,0,0" Text=></TextBlock>-->
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical">
                                            <Button ToolTip="Open synching templates folder on your HDD •" Margin="12,0,0,0" Click="OpenF_Click" x:Name="OpenF">
                                                <ContentPresenter Content="{StaticResource appbar_book_open}"></ContentPresenter>
                                            </Button>
                                            <!--<TextBlock FontSize="10" Width="70" HorizontalAlignment="Right" TextAlignment="Justify" TextWrapping="Wrap" Margin="0,2,0,0"  Text=></TextBlock> -->
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Margin="0,10,0,0" Grid.Row="6">
                                        <Slider Width="150" x:Name="DirSize" IsEnabled="False" IsSelectionRangeEnabled="True" TickPlacement="Both" />
                                        <TextBlock HorizontalAlignment="Center" x:Name="DirSizer"></TextBlock>
                                    </StackPanel>

                                </Grid>
                            </Border>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>

    </DockPanel>

</UserControl>
