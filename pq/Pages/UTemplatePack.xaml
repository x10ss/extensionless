                            <StackPanel Margin="0,0,0,0"  Orientation="Horizontal">
                                <TextBlock Margin="-3,0,0,0" FontWeight="Bold" Foreground="{DynamicResource Accent}" x:Name="ChampText" Style="{StaticResource Heading2}" Text="#CHAMP#"></TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="3,0,0,0" FontStyle="Italic" Foreground="{DynamicResource ItemText}" Text="SPLIT, CROATIA"></TextBlock>
                                <TextBlock Margin="0,0,0,0" Foreground="{DynamicResource ItemText}" Text=" | ♂ | "></TextBlock>
                                <TextBlock Margin="0,0,0,0" Foreground="{DynamicResource ItemText}" FontStyle="Italic" FontWeight="Bold" Text="36"></TextBlock>


                            </StackPanel>
                            <StackPanel Margin="-22,0,0,0" Orientation="Horizontal">
                                <ContentPresenter Margin="8,-10,0,0" Content="{StaticResource appbar_tree_leaf}"></ContentPresenter>
                                <TextBlock Margin="0,0,0,0" Foreground="{DynamicResource ItemTextDisabled}" FontStyle="Oblique" Text="3456 "></TextBlock>
                                <TextBlock Margin="0,0,0,0" Foreground="{DynamicResource Accent}" FontStyle="Oblique" Text="• DONATIONS"></TextBlock>

                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Margin="0, -10,0,0"   Grid.Row="5" HorizontalAlignment="Center" Orientation="Horizontal" >

                        <StackPanel Margin="0,15,-10,0" Orientation="Horizontal">
                            <TextBlock FontSize="12" Margin="-3,0,0,0" FontWeight="Bold" Foreground="{DynamicResource ItemTextDisabled}" Style="{StaticResource Heading2}" Text="#CHAMP#2"></TextBlock>
                        </StackPanel>


                        <StackPanel Margin="0,-15,0,0" HorizontalAlignment="Center" Orientation="Horizontal" >
                            <ContentPresenter Content="{StaticResource appbar_leaderboard}"></ContentPresenter>

                        </StackPanel>
                        <StackPanel Margin="-10,20,0,0">
                            <TextBlock FontSize="11"  Margin="-3,0,0,0" FontWeight="Bold" Foreground="{DynamicResource ItemTextDisabled}" Style="{StaticResource Heading2}" Text="#CHAMP#3"></TextBlock>


                        </StackPanel>
                    </StackPanel>

                </Grid>
            </Border>

            <TextBlock TextWrapping="Wrap" TextAlignment="Justify" Text="- This enables you to customize your Extension List which gets loaded from the registry and displayed in the main menu. If your setting Auxiliary LIBRARY is set to ON then these here settings will make no efect, since the unchecked entries will be categorized as STANDARD LIBRARY and will be loaded as well. Only scenario in which you could use this option is when you don't have the Auxiliary LIB. option ON and want a more light-weight Library TO BE loaded." />

        </StackPanel>
        <StackPanel Visibility="{Binding IsLoaded2,Converter={StaticResource InvBoolToVis}}">
