<UserControl x:Class="pq.Pages.TemplatePack3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <Border  VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="CornflowerBlue" CornerRadius="126"  BorderThickness="4">
                <Grid Margin="25,35,25,35" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>

                    </Grid.RowDefinitions>


                    <ContentPresenter VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="0" Content="{StaticResource appbar_folder_puzzle}"></ContentPresenter>
                    <TextBlock Foreground="DodgerBlue" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,45,0" Grid.Row="0" FontWeight="Heavy" Style="{StaticResource Heading1}">
                        
                        <Run Text="PYCK"></Run>
                        <Run Foreground="CornflowerBlue" Text="a"></Run>
                    </TextBlock>

                    <StackPanel HorizontalAlignment="Center"  Orientation="Vertical" Margin="8"  Grid.Row="1">
                        <TextBlock HorizontalAlignment="Center"  Text="SVG-JPEG-JPG-GIF-PNG"></TextBlock>
                        <TextBlock  HorizontalAlignment="Center" Text="EPS-SVG-AI-CDR-BMP"></TextBlock>
                        <TextBlock  HorizontalAlignment="Center" Text="PSD-PDN-DWG"></TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                        <Button Margin="0,8,1,0" ToolTip="Restore a fresh copy">
                            <ContentPresenter HorizontalAlignment="Center" Content="{StaticResource appbar_reset}"></ContentPresenter>
                        </Button>
                        <Button Margin="1,8,0,0" ToolTip="Open folder">
                            <ContentPresenter Content="{StaticResource appbar_book_open}"></ContentPresenter>
                        </Button>
                    </StackPanel>
                    <StackPanel Margin="0,8,0,0"  HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="3">
                        <Canvas Width="20" Height="20" Clip="F1 M 0,0L 70,0L 76,76L 0,70L 0,0">
                            <Path Width="18" Height="18" Canvas.Left="1" Canvas.Top="1" Stretch="Fill" Fill="CornflowerBlue" Data="M6715 657c-2183,-322 -4356,724 -5464,2639l-204 350 1987 1147 205 -341 2 -3c352,-609 892,-1072 1534,-1328l0 2215 -4003 2312 125 320c447,1145 1264,2094 2328,2709 822,474 1747,724 2696,724l6 0 398 -3 0 -2300 -403 2c-545,0 -1075,-143 -1547,-415 -129,-75 -252,-158 -368,-249l1918 -1108 4007 2313 215 -272c168,-212 320,-435 455,-669 967,-1675 963,-3729 0,-5400l-199 -347 -1992 1150 199 347c348,604 482,1310 384,1994l-1912 -1104 -21 -3904 -2 -731 -344 -48z"/>
                        </Canvas>
                        <TextBlock Foreground="CornflowerBlue" Text=" PACK² " VerticalAlignment="Center"></TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
