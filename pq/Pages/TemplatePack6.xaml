<UserControl x:Class="pq.Pages.TemplatePack6"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <Border  VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="Khaki" CornerRadius="33" BorderThickness="3">
                <Grid Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>

                    </Grid.RowDefinitions>

                    <StackPanel HorizontalAlignment="Center" Grid.Row="0" Orientation="Horizontal">
                        <ContentPresenter Margin="-18,0,0,0" VerticalAlignment="Center" Content="{StaticResource appbar_chess_pawn2}"></ContentPresenter>
                        <ContentPresenter Margin="0,13,0,0" Content="{StaticResource appbar_chess_bishop}"></ContentPresenter>
                        <ContentPresenter Margin="-6,13,0,0" VerticalAlignment="Center" Content="{StaticResource appbar_chess_pawn}"></ContentPresenter>
                        <ContentPresenter VerticalAlignment="Bottom" Margin="0,0,0,10" Content="{StaticResource appbar_chess_queen}"></ContentPresenter>
                        <ContentPresenter Margin="-30,11,0,0" Content="{StaticResource appbar_chess_rook}"></ContentPresenter>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="0" Margin="0,59,0,-10">
                        <TextBlock FontFamily="Impact" FontWeight="UltraLight" VerticalAlignment="Bottom" Style="{StaticResource Heading1}">
                            <Run Text="Z" FontSize="36" Foreground="CadetBlue"></Run>
                            <Run Text="U" FontSize="22"  Foreground="CadetBlue"></Run>
                            <Run Text="G" FontSize="22"  Foreground="CadetBlue"></Run>
                            <Run Text="Z" FontSize="36"   Foreground="Khaki"></Run>
                            <Run Text="W"  FontSize="22"  Foreground="CadetBlue"></Run>
                            <Run Text="A"  FontSize="22"  Foreground="Khaki"></Run>
                            <Run Text="N"  FontSize="22"  Foreground="CadetBlue"></Run>
                            <Run Text="G"  FontSize="22"  Foreground="Khaki"></Run>
                        </TextBlock>

                    </StackPanel>
                    <StackPanel Margin="0,4,0,0" HorizontalAlignment="Center" Orientation="Vertical"  Grid.Row="1">


 <TextBlock Style="{StaticResource Heading2}" HorizontalAlignment="Center">
                            <Run FontSize="11"  Text="ENDGAME"></Run>
                             <Run Text="◻"  Foreground="CadetBlue" ></Run>
                                <Run Text="◻"  Foreground="Khaki"></Run>
                            <Run FontSize="13" Text="PROBLEM"></Run>
                        </TextBlock>
                        <TextBlock Margin="0,-5,0,-5" Style="{StaticResource Heading2}" HorizontalAlignment="Center">
                            <Run FontSize="14"  Text="OPENING"/>
                            <Run Text="◼"  Foreground="DarkKhaki"></Run>
                            <Run Text="◼" Foreground="DarkSlateGray" ></Run>
                            <Run FontSize="10"  Text="CHECKMATES"/>
                        </TextBlock>

                       
                        <TextBlock Margin="0,0,0,-3" Foreground="{DynamicResource ItemTextDisabled}" HorizontalAlignment="Center" FontFamily="Consolas" FontWeight="Black" FontStretch="UltraExpanded" Text="p n d"></TextBlock>


                    </StackPanel>
                    <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                        <Button Margin="0,8,1,0" ToolTip="Restore a fresh copy">
                            <ContentPresenter HorizontalAlignment="Center" Content="{StaticResource appbar_reset}"></ContentPresenter>
                        </Button>
                        <Button Margin="1,8,0,0" ToolTip="Open folder">
                            <ContentPresenter Content="{StaticResource appbar_book_open}"></ContentPresenter>
                        </Button>
                    </StackPanel>
                    <StackPanel Margin="0,8,0,0" HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="4">
                        <Canvas Width="20" Height="20" Clip="F1 M 0,0L 70,0L 76,76L 0,70L 0,0">
                            <Path Width="18" Height="18" Canvas.Left="1" Canvas.Top="1" Stretch="Fill" Fill="CadetBlue" Data="M6715 657c-2183,-322 -4356,724 -5464,2639l-204 350 1987 1147 205 -341 2 -3c352,-609 892,-1072 1534,-1328l0 2215 -4003 2312 125 320c447,1145 1264,2094 2328,2709 822,474 1747,724 2696,724l6 0 398 -3 0 -2300 -403 2c-545,0 -1075,-143 -1547,-415 -129,-75 -252,-158 -368,-249l1918 -1108 4007 2313 215 -272c168,-212 320,-435 455,-669 967,-1675 963,-3729 0,-5400l-199 -347 -1992 1150 199 347c348,604 482,1310 384,1994l-1912 -1104 -21 -3904 -2 -731 -344 -48z"/>
                        </Canvas>
                        <TextBlock Foreground="CadetBlue" Text=" PACK² " VerticalAlignment="Center"></TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
