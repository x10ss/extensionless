<UserControl x:Class="pq.Pages.Faq.faq16"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <StackPanel Orientation="Vertical">
                    <TextBlock TextWrapping="Wrap" Text="HOW DO I USE THE EXTENSIONLESS AUXILIARY LIBRARY?" Style="{StaticResource Heading2}" />
                    <ContentPresenter Content="{StaticResource appbar_home_question}"></ContentPresenter>

                    <TextBlock TextWrapping="Wrap" TextAlignment="Justify" Text="- Manage which extensions are in the Auxiliary library;"/>
                    <TextBlock TextWrapping="Wrap" TextAlignment="Justify" Text="- This enables you to customize your Extension List which gets loaded from the registry and displayed in the main menu. If your setting Auxiliary LIBRARY is set to ON then these here settings will make no efect, since the unchecked entries will be categorized as STANDARD LIBRARY and will be loaded as well. Only scenario in which you could use this option is when you don't have the Auxiliary LIB. option ON and want a more light-weight Library TO BE loaded." />
                </StackPanel>
                <StackPanel HorizontalAlignment="Left">
                    <mui:ModernButton IconData="F1 M 38,46L 56,46L 56,50L 38,50L 38,46 Z M 21.0858,52.0858L 52.0858,21.0858L 54.9142,23.9142L 23.9142,54.9142L 21.0858,52.0858 Z M 19,26L 26,26L 26,19L 30,19L 30,26L 37,26L 37,30L 30,30L 30,37L 26,37L 26,30L 19,30L 19,26 Z " Margin="15" Content="HOW DO I USE THE EXTENSIONLESS AUXILIARY LIBRARY?"  Click="ModernButton_Click"/>

                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
