<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mui="http://firstfloorsoftware.com/ModernUI">


    <LinearGradientBrush x:Key="gd"  EndPoint="0,1" Opacity=".2" x:Shared="False">
        <GradientStop Offset="0" Color="Transparent" />
        <GradientStop Offset="1" Color="{DynamicResource AccentColor}" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="gdb"  EndPoint="0,1" Opacity=".2" x:Shared="False">
        <GradientStop Offset="1" Color="Transparent" />
        <GradientStop Offset="0" Color="{DynamicResource AccentColor}" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="gd2"  EndPoint="0,1" Opacity=".2" x:Shared="False">
        <GradientStop Offset="0" Color="Teal" />
        <GradientStop Offset="1" Color="ForestGreen" />
    </LinearGradientBrush>

    <ContextMenu x:Key="Kontekst">
        <MenuItem Header="tree" Foreground="RosyBrown" Background="RoyalBlue">
            <MenuItem.Icon>
                <Image Source="/Images/Copy.png" ></Image>
            </MenuItem.Icon>
            <MenuItem Foreground="Coral" Command="{Binding DataContext.someshit}" Header="trla"/>
            <MenuItem Header="trlvva" Background="Lavender"/>

        </MenuItem>
        <MenuItem Header="tral" Foreground="Teal" Background="LightGreen">
            <MenuItem.Icon>
                <Image Source="/Images/Copy.png" ></Image>
            </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="copi" Foreground="Teal" Background="LightGreen">
            <MenuItem.Icon>
                <Image Source="/Images/Paste.png" ></Image>
            </MenuItem.Icon>
        </MenuItem>
        <Separator Foreground="Red" Background="Indigo"></Separator>
        <MenuItem Header="Pastr" Foreground="Teal" Background="LightGreen" />

    </ContextMenu>
</ResourceDictionary>
